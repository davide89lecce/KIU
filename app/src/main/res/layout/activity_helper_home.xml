<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gambino_serra.KIU.Helper_Home"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/disponibilita"
        android:layout_width="106dp"
        android:layout_height="22dp"
        android:text="@string/disp"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:textSize="19sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/switchDisponibilita"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="553dp" />

    <Switch
        android:id="@+id/switchDisponibilita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp" />


    <TextView
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cont_code"
        android:textSize="18sp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/disponibilita"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/num_cont_code"
        android:layout_width="88dp"
        android:layout_height="17dp"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:layout_conversion_absoluteX="260dp"
        tools:layout_conversion_absoluteY="87dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteHeight="21dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/linearLayout"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout"
        android:layout_marginLeft="8dp" />


    <TextView
        android:id="@+id/txt_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:textSize="22sp"
        tools:layout_conversion_absoluteX="9dp"
        tools:layout_conversion_absoluteY="139dp"
        tools:layout_conversion_absoluteWidth="67dp"
        tools:layout_conversion_absoluteHeight="26dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <RatingBar
        android:id="@+id/rating_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteX="76dp"
        tools:layout_conversion_absoluteY="116dp"
        tools:layout_conversion_absoluteWidth="274dp"
        tools:layout_conversion_absoluteHeight="57dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_rating"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_rating" />


    <include
        layout="@layout/content_sub"
        android:layout_height="361dp"
        android:layout_width="382dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Le mie Code"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
